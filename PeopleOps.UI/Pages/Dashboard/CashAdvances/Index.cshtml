<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="d-flex align-items-center">
                <span>Show</span>&nbsp;
                <select type="search" class="form-control form-control-sm">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                    <option value="50">50</option>
                </select>&nbsp;
                <span>entries</span>
            </div>
            <!--<div class="d-flex align-items-center w-40">-->
            @*<span class="d-block">Search:</span>&nbsp;*@
            <!--<input type="search" class="form-control form-control-sm" placeholder="Search" />
            </div>-->
            <button type="button" class="btn btn-success" data-toggle="ajax-modal" data-url="@Url.Page("/Dashboard/CashAdvances/Index", "CashAdvanceModalPartial")">
                Apply for Cash Advance
            </button>
        </div>
    </div>
    <div class="card-body">

        <table class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CashAdvances)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.ApprovalStatus)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td class="d-flex justify-content-start">
                        <a class="btn btn-warning btn-sm ml-2" asp-action="Edit" asp-route-id="@item.Id" aria-hidden="true">
                            Edit &nbsp;<i class="fa fa-pencil"></i>
                        </a>
                        <a class="btn btn-info btn-sm ml-2" asp-action="Details" asp-route-id="@item.Id" aria-hidden="true">
                            Details &nbsp;<i class="far fa-eye"></i>
                        </a>
                        <a class="btn btn-danger btn-sm ml-2" asp-action="Delete" asp-route-id="@item.Id" aria-hidden="true">
                            Delete &nbsp;<i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <div>Showing 1 to 3 of @Model.CashAdvances.Count() entries</div>
            <div>
                <span>Previous</span>&nbsp;&nbsp;
                @for (int i = 1; i < 5; i++)
                {
                    if (i >= 4)
                    {
                        <a style="color: #d8ddef" class="btn btn-sm btn-outline">....</a>
                        break;
                    }
                    <a class="btn btn-sm btn-outline-secondary">@i</a>
                }
                &nbsp;&nbsp;<span>Next</span>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript" src="~/js/cashadvance.js"></script>
}
