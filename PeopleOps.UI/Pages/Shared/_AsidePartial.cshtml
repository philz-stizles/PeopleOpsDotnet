@using PeopleOps.Application.Contracts.Services
@using PeopleOps.Domain.Enums
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor Accessor
@{ 
    var currentRoute = Accessor.HttpContext.Request.Path.Value.ToLower();
}
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        @*<img src="dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">*@
        <span class="brand-text font-weight-light">PeopleOps Manager</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/default.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@User.Identity.Name</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        @*<div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>*@

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                with font-awesome or any other icon font library -->
                <li class="nav-item">
                    <a class="nav-link @(currentRoute == "/dashboard" ? "active" : "" )" asp-area="" asp-page="/Dashboard">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                @if (User.IsInRole(RoleTypes.Admin.ToString()))
                {
                    <li class="nav-item menu-close">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Manage Leave
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-page="/Admin/LeaveTypes">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Leave Types</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Admin/LeaveAllocations">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Leave Allocations</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Admin/LeaveRequests">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Leave Requests</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link @(currentRoute == "/cashadvances" ? "active" : "" )" asp-area="" asp-page="/CashAdvances/Index">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Cash Advances
                            <span class="right badge badge-danger">New</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Privacy">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            My Leave
                            <span class="right badge badge-danger">New</span>
                        </p>
                    </a>
                </li>
                @if (User.IsInRole(RoleTypes.Admin.ToString()))
                {
                    <li class="nav-item menu-close">
                        <a class="nav-link" href="#">
                            <i class="nav-icon fas fa-users-cog"></i>
                            <p>
                                Manage Employees
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a class="nav-link active" asp-page="/Admin/Employees/Index">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>Employees</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/CreateOrEditEmployee">
                                    <i class="fas fa-user-plus nav-icon"></i>
                                    <p>Create New Employee</p>
                                </a>
                            </li>
                        </ul>
                    </li>
}
                <li class="nav-item">
                    <a class="nav-link @(currentRoute == "/kanban" ? "active" : "" )" asp-page="/Kanban/Index">
                        <i class="nav-icon fas fa-list-alt"></i>
                        <p>Kanban Board</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentRoute == "/meetings" ? "active" : "" )" asp-page="/Meetings/Index">
                        <i class="nav-icon far fa-calendar"></i>
                        <p>Meetings</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentRoute == "/okrs" ? "active" : "" )" asp-page="/OKRs/Index">
                        <i class="nav-icon fas fa-business-time"></i>
                        <p>OKRs</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentRoute == "/profile" ? "active" : "" )" asp-page="/Profile/Index">
                        <i class="nav-icon fas fa-user-cog"></i>
                        <p>Profile</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentRoute == "/settings" ? "active" : "" )" asp-page="/Settings/Index">
                        <i class="nav-icon fa fa-solid fa-gear"></i>
                        <p>Settings</p>
                    </a>
                </li>

                @*<partial name="_SimpleLinkPartial" model="Cash Advances" } />*@
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
