@page
@model PeopleOps.UI.Pages.CreateOrEditEmployeeModel
@{
    ViewData["ActivePage"] = "Create New Employee";
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}
<form id="createOrEditEmployee" method="post">
    <div class="row">
        <div class="col-md-6">
            <!-- Form Element sizes -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Personal Information</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col"><input class="form-control" type="text" placeholder="First name"></div>
                        <div class="col"><input class="form-control" type="text" placeholder="Last name"></div>
                    </div>
                    <br>
                    <input class="form-control" type="text" placeholder="Email">
                    <br>
                    <input class="form-control" type="text" placeholder="Phone">
                </div>
                <!-- /.card-body -->
            </div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Address Information</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-8"><input class="form-control" type="text" placeholder="Street"></div>
                        <div class="col-4"><input class="form-control" type="text" placeholder="City"></div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-2"><input class="form-control" type="text" placeholder="Zip"></div>
                        <div class="col-6"><input class="form-control" type="text" placeholder="State"></div>
                        <div class="col-4"><input class="form-control" type="text" placeholder="Country"></div>
                    </div>
                    <br>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        <div class="col-md-6">
            <!-- Form Element sizes -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Professional Information</h3>
                </div>
                <div class="card-body">
                    <input class="form-control" type="text" placeholder="Job role">
                    <br>
                    <input class="form-control" type="text" placeholder="Default input">
                    <br>
                    <input class="form-control" type="text" placeholder="Default input">
                    <br>
                    <input class="form-control" type="text" placeholder="Default input">
                    <br>
                    <input class="form-control" type="text" placeholder="Default input">
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end"><button type="submit" class="btn btn-success">Create</button></div>
</form>